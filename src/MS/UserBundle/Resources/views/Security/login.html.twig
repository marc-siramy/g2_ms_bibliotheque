{% extends "MSGestionBibliothequeBundle::layout.html.twig" %}

{% block title %}
Connectez-vous -
{{ parent() }}
{% endblock %}

{% block g2_ms_gestionbibliotheque_body %}
	<div class="well search_form_div row">
      <div class="col s6 offset-s3">
        <h1 class="header teal-text text-lighten-2">Connectez-vous</h1>
          {# S'il y a une erreur, on l'affiche dans un joli cadre #}
          {% if error %}
            <div class="alert alert-danger">{{ error.message }}</div>
          {% endif %}
          {# Le formulaire, avec URL de soumission vers la route "login_check" comme on l'a vu #}
          <form class="my-form-class" action="{{ path('login_check') }}" method="post">
            <label for="username">Login :</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" />
        
            <label for="password">Mot de passe :</label>
            <input type="password" id="password" name="_password" />
            <br />
            <button type="submit" class="btn btn-default">Connexion</button>
           </form>
    	</div>
   </div>
{% endblock %}
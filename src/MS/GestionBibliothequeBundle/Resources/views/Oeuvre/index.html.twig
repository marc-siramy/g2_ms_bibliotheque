{% extends "MSGestionBibliothequeBundle::layout.html.twig" %}

{% block title %}
  Accueil - {{ parent() }}
{% endblock %}

{% block ms_gestionbibliotheque_body %}

  <h2>Liste des oeuvres</h2>

  <ul>
    {% for oeuvre in listeOeuvres %}
      <li>
        <a href="{# { path('g2_ms_gestion_bibliotheque_oeuvre_view', {'id': oeuvre.id}) } #}">
          {{ oeuvre.titre }}
        </a>
        par {# { oeuvre.auteur.prenom }} {{ oeuvre.auteur.nom } #},
        le {{ oeuvre.dateDePublication|date('d/m/Y') }}
      </li>
    {% else %}
      <li>Oeuvres non encore disponibles sur le site. Revenez dans un moment !</li>
    {% endfor %}
  </ul>

{% endblock %}